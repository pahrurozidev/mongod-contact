<div class="row">
    <div class="col-md-8">
        <% if (contacts.length === 0) { %>
        <div class="alert alert-danger" role="alert">
            Data contact masih kosong !
        </div>
        <% } else { %>
        <h2>Daftar Kontak</h2>
        <div class="mt-3 mb-3">
            <a href="/contact/add" class="btn btn-primary">Tambah Data Contact</a>
        </div>
        <% if (msg.length !== 0) { %>
        <div class="alert alert-success"><%= msg %> </div>
        <% } %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No HP</th>
                    <th scope="col">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% contacts.forEach((contact, i) => { i++ %>
                <tr>
                    <th scope="row"><%= i %> </th>
                    <td><%= contact.nama %> </td>
                    <td><%= contact.nohp %> </td>
                    <td>
                        <a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill">
                            <i class="bi bi-info-circle"></i>
                            Detail
                        </a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } %>
    </div>
</div>