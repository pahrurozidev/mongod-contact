<div class="row">
    <div class="col-md-6">
        <h2>Form Ubah Data Kontak</h2>
        <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
            <ul>
                <% errors.forEach(error => { %>
                <li><%= error.msg%> </li>
                <% }) %>
            </ul>
        </div>
        <% } %>
        <form action="/contact?_method=PUT" method="post" class="mt-4">
            <input type="hidden" name="_id" value="<%= contact._id %>">
            <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %> ">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Nama</label>
                <input type="text" class="form-control" id="nama" name="nama" placeholder="masukan nama"
                    value="<%= contact.nama%>">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="masukan email"
                    value="<%= contact.email %>">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">No HP</label>
                <input type="number" class="form-control" id="nohp" name="nohp" placeholder="masukan nohp"
                    value="<%= contact.nohp %>">
            </div>
            <button type="submit" class="btn btn-primary">Ubah Kontak</button>
        </form>
    </div>
</div>